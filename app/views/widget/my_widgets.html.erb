<div class="container" %>
  <h1>My Widgets</h1>
  <div class="row">
    <div class="col-md-6">
      <%= link_to 'New Widget', new_widget_path, class: 'btn btn-primary btm10' %>
      <%= form_tag(widget_my_widgets_path, :method => 'get') do %>
        <%= render 'search_form' %>
        <%= link_to 'Reset', widget_my_widgets_path(filter: false), class: 'btn btn-primary top10' %>
      <% end %>
    </div>
  </div>
  <%= paginate @widgets %>
  <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="th-sm">Name

        </th>
        <th class="th-sm">Description

        </th>
        <th class="th-sm">Kind

        </th>
        <th class="th-sm">Actions

        </th>      
      </tr>
    </thead>
    <tbody>
      <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget['name']%></td>
        <td><%= widget['description']%></td>
        <td><%= widget['kind']%></td>
        <td><%= link_to 'edit', "/widget/#{widget['id']}/edit?name=#{widget['name']}&description=#{widget['description']}" %> |
          <%= link_to 'Delete', widget_path(widget['id']), method: 'delete' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>