<div class="container" %>
  <h1>ALL Visible Widgets</h1>
  <div class="row">
    <div class="col-md-6">
      <%= form_tag(widget_index_path, :method => 'get') do %>
        <%= render 'search_form' %>
        <%= link_to 'Reset', widget_index_path(filter: false), class: 'btn btn-primary top10' %>
      <% end %>
    </div>
  </div>
  <%= paginate @widgets %>
  <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th class="th-sm">Name

        </th>
        <th class="th-sm">Description

        </th>
        <th class="th-sm">User

        </th>      
      </tr>
    </thead>
    <tbody>
      <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget['name']%></td>
        <td><%= widget['description']%></td>
        <td><%= widget['user']['name']%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>